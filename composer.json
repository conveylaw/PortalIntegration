{
    "name": "conveylaw/portal-integration",
    "type": "library",
    "description": "PHP SDK to integrate with the Convey365 Panel Management Portal as an introducer",
    "keywords": [
        "conveylaw",
        "portal",
        "introducer",
        "api"
    ],
    "homepage": "https://github.com/conveylaw/PortalIntegration",
    "license": "MIT",
    "authors": [
        {
            "name": "Edward Ashley",
            "email": "ned@conveylaw.com",
            "homepage": "https://www.convey365.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~7.4"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=8.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "conveylaw\\PortalIntegration\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "conveylaw\\PortalIntegration\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
